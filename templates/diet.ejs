<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= body.title %></title>
  <link rel="stylesheet" href="../diet-html/assets/css/output.css">
</head>

<body>

  <body class="bg-white">
    <% if(body.couchName || body.title || body.couchLogo) { %>
    <header class="bg-primary px-4 py-6">
      <div class="flex items-center justify-between">
        <div class="text-white">
          <h2 class="text-3xl mb-4 font-bold"><%= body.couchName %></h2>
          <h1 class="text-2xl"><%= body.title %></h1>
        </div>
        <% if(typeof body.couchLogo != "undefined") { %>
        <img class="w-60" src="<%= body.couchLogo %>" alt="logo">
        <% } %>
      </div>
    </header>
    <% } %>

    <main class="px-4 py-5">
      <div class="flex flex-col gap-5 mb-6">

        <% body.meals.forEach(function(meal,mIndex) { %>
        <div class="bg-back p-3 rounded-xl">
          <div class="flex items-center justify-between mb-3">
            <span class="font-bold text-lg"><%= meal.meal_name %></span>
            <span class="bg-primary px-2 py-1.5 rounded-full text-white flex items-center gap-1.5 text-sm">
              <span><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" role="img" class="iconify iconify--mdi MuiChip-icon MuiChip-iconMedium MuiChip-iconColorPrimary" font-size="20" width="1em" height="1em" viewBox="0 0 24 24">
                  <path fill="currentColor" d="M12 20a8 8 0 0 0 8-8a8 8 0 0 0-8-8a8 8 0 0 0-8 8a8 8 0 0 0 8 8m0-18a10 10 0 0 1 10 10a10 10 0 0 1-10 10C6.47 22 2 17.5 2 12A10 10 0 0 1 12 2m.5 5v5.25l4.5 2.67l-.75 1.23L11 13V7z"></path>
                </svg></span>
              <span>از <span style="position: relative; top: 2px;"><%= meal.start_time %> تا <%= meal.end_time %></span></span>
              <!-- <span>از <%= meal.start_time %> تا <%= meal.end_time %></span> -->
            </span>
          </div>
          <div class="bg-white rounded-lg overflow-hidden">
            <% meal.menu.forEach(function(menuItem,mtIndex) { %>

            <div class="p-3 border-b-2 border-primary last:border-none">
              <div class="flex items-center gap-3">
                <% if(menuItem.food_image) {%>
                <img class="rounded-md" src="http://storage.morabiha.com<%= menuItem.food_image %>" alt="food" style="width: 48px;">
                <% } %>
                <div>
                  <p class="font-bold mb-2"><%= menuItem.food_name %></p>
                  <p class="text-xs text-gray-600"><%= menuItem.description %></p>
                </div>
              </div>
            </div>

            <% }) %>
          </div>
        </div>

        <% }) %>

      </div>
      <div class="bg-back p-3 rounded-xl">
        <h3 class="mb-3 text-lg font-bold">توضیحات کارشناس</h3>
        <p class="text-[13px] text-gray-700 whitespace-pre-line">
          <%- body.description %>
        </p>
      </div>
    </main>
  </body>




</body>

</html>